@model IEnumerable<Ninja.Models.Forum>
@{
    ViewData["Title"] = "Forum List";
}

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">Forum List</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-controller="Forum" asp-action="Create" class="btn btn-primary">Create New Forum</a>
    </div>
  </div>
  <br />

  <table class="table table-bordered table-striped" style="width:100%">
    <thead>
      <tr>
        <th>Forum Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var forum in Model)
      {
        <tr>
          <td width="50%"><a asp-controller="@forum.ForumTitle" asp-action="Index">@forum.ForumTitle</a></td>
          <td width="50%">@forum.Description</td>
        </tr>
      }
    </tbody>
  </table>
</div>

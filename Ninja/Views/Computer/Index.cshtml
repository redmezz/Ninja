@model IEnumerable<Ninja.Models.Computer>
@{
  ViewData["Title"] = "Computer Forums";
}

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">Forum List</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-controller="Computer" asp-action="Create" class="btn btn-primary">Create New Forum</a>
    </div>
  </div>
  <br />

  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width:100%">
      <thead>
        <tr>
          <th>Forum Title</th>
          <th>Submitted By</th>
          <th>Creation Date</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var forum in Model)
        {
          <tr>
            <td width="40%">@forum.Title</td>
            <td width="30%"></td>
            <td width="30%">@forum.Creation</td>
          </tr>
        }
      </tbody>
    </table>
    } else
    {
      <p>No forums yet</p>
    }

</div>
